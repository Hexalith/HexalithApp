@using System.Reflection
<Router AppAssembly="@typeof(MauiProgram).Assembly" AdditionalAssemblies="new List<Assembly>(){
    typeof(Hexalith.UI.Components._Imports).Assembly
    }">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="routeData" DefaultLayout="typeof(FluentMainLayout)">
            <NotAuthorized>
                <RedirectToLogin />
            </NotAuthorized>
        </AuthorizeRouteView>
        <FocusOnNavigate RouteData="routeData" Selector="h1" />
    </Found>
</Router>
