@inject IUIApplication Application
<Router AppAssembly="typeof(HexalithApp.WebApp._Imports).Assembly"
        AdditionalAssemblies="[typeof(HexalithApp.WebApp.Program).Assembly, typeof(HexalithApp.WebServer.Program).Assembly, ..Application.PresentationAssemblies]">
    <Found Context="routeData">
        <AuthorizeRouteView RouteData="routeData" DefaultLayout="typeof(MainLayout)">
            <NotAuthorized>
                <RedirectToLogin />
            </NotAuthorized>
        </AuthorizeRouteView>
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <HexNotFound />
        </LayoutView>
    </NotFound>
</Router>
@code
{
    protected override void OnInitialized()
    {
        base.OnInitialized();
        foreach (var assembly in Application.PresentationAssemblies)
        {
            Console.WriteLine($"Routing assemblies : {assembly.FullName}");
        }
    }
}
