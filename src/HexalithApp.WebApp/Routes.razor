@inject IUIApplication Application
<Router AppAssembly="typeof(HexalithApp.WebApp._Imports).Assembly"
		AdditionalAssemblies="[..Application.PresentationAssemblies]">
	<Found Context="routeData">
		<AuthorizeRouteView RouteData="routeData" DefaultLayout="typeof(MainLayout)">
			<NotAuthorized>
				<RedirectToLogin />
			</NotAuthorized>
		</AuthorizeRouteView>
	</Found>
	<NotFound>
		<LayoutView Layout="@typeof(MainLayout)">
			<HexPageTitle>Not Found</HexPageTitle>
			<HexNotFound />
		</LayoutView>
	</NotFound>
</Router>
