@page "/"
@page "/Home"
@page "/Hexalith"
@using Microsoft.AspNetCore.Authorization
@attribute [AllowAnonymous]
@rendermode InteractiveAuto
@inject NavigationManager NavigationManager
@inject IApplication Application

<HexPageTitle LocalizedTitle="Home" />


@code {
    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            if (string.IsNullOrWhiteSpace(Application?.HomePath))
            {
                // TODO: Add Hexalith default background image
                return;
            }
            // Navigate to the application HomePath
            string currentPath = NavigationManager.ToBaseRelativePath(NavigationManager.Uri);
            if (!string.Equals(currentPath, Application.HomePath, StringComparison.OrdinalIgnoreCase))
            {
                NavigationManager.NavigateTo(Application.HomePath, forceLoad: false);
            }
        }
    }
}